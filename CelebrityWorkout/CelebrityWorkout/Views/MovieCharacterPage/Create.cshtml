@model CelebrityWorkout.Models.MovieCharacterDTO

<h2>Create Movie Character</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="CharacterName"></label>
        <input asp-for="CharacterName" class="form-control" />
        <span asp-validation-for="CharacterName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MovieTitle"></label>
        <input asp-for="MovieTitle" class="form-control" />
        <span asp-validation-for="MovieTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YearOfRelease"></label>
        <input asp-for="YearOfRelease" class="form-control" />
        <span asp-validation-for="YearOfRelease" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Celebrity</label>
        <select asp-for="CelebrityId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Celebrities, "CelebrityId", "Name"))">
        </select>
    </div>
    

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
