@model CelebrityWorkout.Models.MovieCharacterDTO

<h2>Delete Movie Character</h2>

<h4>Are you sure you want to delete this character?</h4>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.CharacterName</h5>
        <p class="card-text">
            <strong>Movie Title:</strong> @Model.MovieTitle<br />
            <strong>Year of Release:</strong> @Model.YearOfRelease<br />
            <strong>Celebrity:</strong> @Model.Celebrity?.Name
        </p>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CharacterId" />
    <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
