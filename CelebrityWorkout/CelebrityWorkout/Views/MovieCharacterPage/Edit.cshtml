@model CelebrityWorkout.Models.MovieCharacterDTO

<h2>Edit Movie Character</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="CharacterId" />

    <div class="form-group">
        <label asp-for="CharacterName"></label>
        <input asp-for="CharacterName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MovieTitle"></label>
        <input asp-for="MovieTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="YearOfRelease"></label>
        <input asp-for="YearOfRelease" class="form-control" />
    </div>

    <div class="form-group">
        <label>Celebrity</label>
        <select asp-for="CelebrityId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Celebrities, "CelebrityId", "Name"))">
        </select>
    </div>


    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
