@model CelebrityWorkout.Models.WorkoutRoutineDTO

<h2>Delete Workout Routine</h2>

<h4>Are you sure you want to delete this workout routine?</h4>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.WorkoutType</h5>
        <p class="card-text">
            <strong>Frequency:</strong> @Model.Frequency<br />
            <strong>Duration:</strong> @Model.Duration<br />
            <strong>Description:</strong> @Model.Description<br />
            <strong>Celebrity:</strong> @Model.Celebrity?.Name
        </p>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="WorkoutId" />
    <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
