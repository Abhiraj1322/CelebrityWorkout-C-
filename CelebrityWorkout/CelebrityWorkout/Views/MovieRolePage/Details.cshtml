@model CelebrityWorkout.Models.MovieRoleDTO

<h2>Movie Role Details</h2>

<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">@Model.MovieTitle</h4>
        <p class="card-text">
            <strong>Role:</strong> @Model.Role<br />
            <strong>Year of Release:</strong> @Model.YearOfRelease<br />
            <strong>Celebrity:</strong> @Model.Celebrity?.Name
        </p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MovieRoleId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.MovieRoleId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
