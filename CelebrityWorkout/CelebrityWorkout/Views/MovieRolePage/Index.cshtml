@model List<CelebrityWorkout.Models.MovieRoleDTO>

<h2>Movie Roles</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Role</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Movie Title</th>
            <th>Role</th>
            <th>Year</th>
            <th>Celebrity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MovieTitle</td>
                <td>@item.Role</td>
                <td>@item.YearOfRelease</td>
                <td>@item.Celebrity?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MovieRoleId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.MovieRoleId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.MovieRoleId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
