@model List<CelebrityWorkout.Models.CelebrityDTO>

<h2>Celebrity List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Celebrity</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Profession</th>
            <th>Biography</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var celeb in Model)
        {
            <tr>
                <td>@celeb.Name</td>
                <td>@celeb.Profession</td>
                <td>@celeb.Biography</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@celeb.CelebrityId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@celeb.CelebrityId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@celeb.CelebrityId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
